{
  "name": "hello-world",
  "description": "Simple app to say hello!",
  "version": "0.0.1",
  "private": false,
  "preferGlobal": false,
  "main": "./app/server/app.js",
  "scripts": {
    "clean": "rm -rf node_modules/ dist/ coverage/ npm-debug.log .git.json DockerFile .dockerignore docker-compose.yml",
    "dev": "BUNYAN_LOG_LEVEL=debug EXPRESS_LOG_FORMAT=dev npm start | bunyan",
    "docker": "npm run docker:prep && npm run docker:rebuild && npm run docker:up",
    "docker:build": "docker build -t utopias/hello-world:0.0.1 -f ./Dockerfile .",
    "docker:clean:containers": "docker-compose stop && docker-compose rm -f",
    "docker:clean:image": "docker images -q utopias/hello-world:0.0.1 | xargs docker rmi -f",
    "docker:prep": "gulp git-info && node docker/dockerfile",
    "docker:rebuild": "npm run docker:clean:containers && npm run docker:clean:image && npm run docker:build",
    "docker:restart": "npm run docker:clean:containers && npm run docker:up",
    "docker:up": "docker-compose up -d",
    "gulp": "gulp",
    "lint": "gulp lint",
    "start": "node $npm_package_main",
    "test": "echo \"No tests created :-(\" && exit 1"
  },
  "precommit": {
    "silent": false,
    "run": [
      "lint"
    ]
  },
  "engines": {
    "node": "^4.2"
  },
  "keywords": [
    "helloworld",
    "NodeJs",
    "ExpressJs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/utopias/hello-world"
  },
  "readme": "README.md",
  "bugs": {
    "url": "https://github.com/utopias/hello-world/issues"
  },
  "dependencies": {
    "body-parser": "^1",
    "bunyan": "^1",
    "bunyan-loggly": "^0",
    "express": "^4",
    "jade": "^1",
    "lodash": "^3",
    "moment": "^2",
    "morgan": "^1",
    "nconf": "^0"
  },
  "devDependencies": {
    "eslint": "^1",
    "gulp": "^3",
    "gulp-debug": "^2",
    "gulp-eslint": "^1",
    "gulp-load-plugins": "^1",
    "gulp-nodemon": "^2",
    "gulp-sequence": "^0",
    "gulp-stylint": "^3",
    "gulp-util": "^3",
    "json2yaml": "^1",
    "node-dockerfile": "^0",
    "pre-commit": "^1",
    "request": "^2",
    "semver": "^5.0.3",
    "shelljs": "^0"
  }
}
