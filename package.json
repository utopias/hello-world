{
  "name": "hello-world",
  "description": "Simple app to say hello!",
  "authors": [
    "First Last <first.last@example.com>"
  ],
  "version": "0.0.3",
  "private": false,
  "preferGlobal": false,
  "main": "src/app/server/app.js",
  "scripts": {
    "clean": "rm -rf node_modules/ dist/ coverage/ src/app/client/statics/bower_components/ npm-debug.log .git.json DockerFile .dockerignore docker-compose.yml circle.yml .travis.yml .nvmrc",
    "ci": "npm run ci:circle && npm run ci:nvm && npm run ci:travis && npm run ci:docker",
    "ci:circle": "node build/circleci/build",
    "ci:docker": "node build/docker/build",
    "ci:nvm": "node build/nvm/build",
    "ci:travis": "node build/travis/build",
    "coverage": "gulp git-info && gulp coverage",
    "coveralls": "codeclimate-test-reporter < coverage/lcov.info",
    "dev": "BUNYAN_LOG_LEVEL=debug EXPRESS_LOG_FORMAT=dev gulp | bunyan",
    "docker": "npm run docker:prep && npm run docker:rebuild && npm run docker:up",
    "docker:build": "docker build -t utopias/hello-world:0.0.3 -f ./Dockerfile .",
    "docker:clean": "npm run docker:clean:containers && npm run docker:clean:image",
    "docker:clean:containers": "docker-compose stop && docker-compose rm -f",
    "docker:clean:image": "docker images -q utopias/hello-world:0.0.3 | xargs docker rmi -f",
    "docker:prep": "gulp git-info && npm run ci:docker",
    "docker:rebuild": "npm run docker:clean && npm run docker:build",
    "docker:restart": "npm run docker:clean:containers && npm run docker:prep && npm run docker:up",
    "docker:up": "docker-compose scale service=1 haproxy=1",
    "gulp": "gulp",
    "lint": "gulp lint",
    "plato": "plato -r -d coverage/plato -t \"In-Depth Code Coverage for $npm_package_name\" src/**/*.js",
    "postinstall": "npm run docker:prep && npm run ci",
    "start": "node $npm_package_main",
    "test": "gulp test",
    "test-integration": "gulp test-integration",
    "test-unit": "gulp test-unit"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "engines": {
    "node": "^4.2"
  },
  "bugs": {
    "url": "https://github.com/utopias/hello-world/issues"
  },
  "keywords": [
    "helloworld",
    "NodeJs",
    "ExpressJs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/utopias/hello-world"
  },
  "readme": "README.md",
  "test": {
    "reporter": "spec"
  },
  "dependencies": {
    "body-parser": "^1",
    "bunyan": "^1",
    "bunyan-loggly": "^0",
    "express": "^4",
    "jade": "^1",
    "lodash": "^3",
    "moment": "^2",
    "morgan": "^1",
    "nconf": "^0"
  },
  "devDependencies": {
    "chai": "^3",
    "del": "^2",
    "eslint": "^1",
    "ghooks": "^0",
    "glob-all": "^3",
    "gulp": "^3",
    "gulp-babel": "^6",
    "gulp-debug": "^2",
    "gulp-eslint": "^1",
    "gulp-istanbul": "^0",
    "gulp-load-plugins": "^1",
    "gulp-mocha": "^2",
    "gulp-nodemon": "^2",
    "gulp-sequence": "^0",
    "gulp-stylint": "^3",
    "gulp-util": "^3",
    "http-status": "^0",
    "istanbul": "^0",
    "json2yaml": "^1",
    "mocha": "^2",
    "node-dockerfile": "^0",
    "plato": "^1",
    "request": "^2",
    "semver": "^5",
    "shelljs": "^0",
    "supertest": "^1"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/utopias/hello-world/blob/develop/LICENSE"
    }
  ]
}
